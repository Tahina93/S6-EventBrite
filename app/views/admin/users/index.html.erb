<div class="container-fluid">
    <h1 class="text-center">Membres</h1>
    <p><%= link_to 'Créer un membre', new_admin_user_path, class: "btn btn-success" %></p>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>E-mail</th>
                <th>Description</th>
                <th>Inscrit le</th>
                <th>Mis-à-jour le</th>
                <th>Admin</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>E-mail</th>
                <th>Description</th>
                <th>Inscrit le</th>
                <th>Mis-à-jour le</th>
                <th>Admin</th>
                <th colspan="3"></th>
            </tr>
        </tfoot>
        <tbody>
        <% @users.each do |user|%>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.last_name %></td>
                <td><%= user.first_name %></td>
                <td><%= user.email %></td>
                <td><%= user.description %></td>
                <td><%= user.created_at %></td>
                <td><%= user.updated_at %></td>
                <td>
                    <%= image_tag 'checked.png' if user.is_admin %>
                </td>
                <td><%= link_to 'Infos', admin_user_path(user.id), class: "btn btn-info" %></td>
                <td><%= link_to 'Modifier', edit_admin_user_path(user.id), class: "btn btn-primary" %></td>
                <td><%= link_to 'Supprimer', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>